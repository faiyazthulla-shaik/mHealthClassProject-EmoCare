<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/activity_phq9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:orientation="vertical"
        tools:context=".ui.depression.depressionActivity">

        <TextView
            android:id="@+id/general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:text="@string/over_the_last_2_weeks_how_often_have_you_been_bothered_by_the_following_problems"
            android:textAllCaps="false"
            android:textColor="#4CAF50"
            android:textColorHighlight="#4CAF50"
            android:textColorHint="#4CAF50"
            android:textColorLink="#4CAF50"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:autoSizeTextType="uniform"
            android:text="@string/_1_little_interest_or_pleasure_in_doing_things"
            android:textAllCaps="false"
            android:textColor="#4CAF50"
            android:textColorHighlight="#4CAF50"
            android:textColorHint="#4CAF50"
            android:textColorLink="#4CAF50"
            android:textSize="22sp" />

        <Button
            android:id="@+id/choiceA"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#4CAF50"
            android:text="@string/not_at_all"
            android:textAllCaps="false"
            android:textColor="#0C090C"
            android:textColorHighlight="#130E13"
            android:textColorHint="#0E090E"
            android:textColorLink="#090609"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/questions" />

        <Button
            android:id="@+id/choiceB"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#4CAF50"
            android:text="@string/Several_days"
            android:textAllCaps="false"
            android:textColor="#130E13"
            android:textColorHighlight="#100A10"
            android:textColorHint="#191018"
            android:textColorLink="#130D13"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/choiceA" />

        <Button
            android:id="@+id/choiceC"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#4CAF50"
            android:text="@string/over_half_the_days"
            android:textAllCaps="false"
            android:textColor="#120D11"
            android:textColorHighlight="#100A10"
            android:textColorHint="#170D16"
            android:textColorLink="#0C070C"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/choiceB"

            />

        <Button
            android:id="@+id/choiceD"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#4CAF50"
            android:text="@string/nearly_every_day"
            android:textAllCaps="false"
            android:textColor="#0B070A"
            android:textColorHighlight="#191018"
            android:textColorHint="#0E090E"
            android:textColorLink="#130C13"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/choiceC"

            />


    </LinearLayout>
</ScrollView>