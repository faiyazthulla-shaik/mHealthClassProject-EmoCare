<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".ui.ptsd.ptsdResultActivity">


    <ImageView
        android:id="@+id/Logo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/app_logo" />

    <TextView
        android:id="@+id/resultP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/your_result_is"
        android:textAllCaps="false"
        android:textColor="#E91E63"
        android:textColorHighlight="#E91E63"
        android:textColorHint="#E91E63"
        android:textColorLink="#E91E63"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/Logo" />

    <Button
        android:id="@+id/retryP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#E91E63"
        android:text="@string/try_again"
        android:textAllCaps="false"
        android:textColor="#120C11"
        android:textColorHighlight="#040203"
        android:textColorHint="#120B11"
        android:textColorLink="#150D15"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/result" />

</LinearLayout>